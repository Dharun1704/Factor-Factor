<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.factorfactor">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NormalMode"
            android:label="Normal Mode">
        </activity>
        <activity
            android:name=".HackerModeInst"
            android:label="Instructions">
        </activity>
        <activity
            android:name=".HackerMode"
            android:label="Hacker Mode">
        </activity>
        <activity
            android:name=".HHackerModeInst"
            android:label="Instructions">
        </activity>
        <activity android:name=".HHackerMode"
            android:label="Hacker Mode ++">
        </activity>
        <activity android:name=".HHackerResult"
            android:label="Result">
        </activity>
    </application>

</manifest>